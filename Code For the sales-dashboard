import { useMemo } from 'react';
import SalesChart from '@/components/organisms/SalesChart';
import MetricsGrid from '@/components/molecules/MetricsGrid';
import ComparisonChart from '@/components/molecules/ComparisonChart';
import TopPerformers from '@/components/molecules/TopPerformers';
import { salesData } from '@/data/salesData';

const Index = () => {
  const metrics = useMemo(() => {
    const total2023 = salesData.reduce((acc, item) => acc + item.sales2023, 0);
    const total2024 = salesData.reduce((acc, item) => acc + item.sales2024, 0);
    const salesGrowth = ((total2024 - total2023) / total2023) * 100;

    return {
      totalSales: total2024,
      avgSales: total2024 / 12,
      totalOrders: 8547,
      customers: 2341,
      salesGrowth: Math.round(salesGrowth),
      ordersGrowth: 18,
    };
  }, []);

  return (
    <div className="min-h-screen bg-background">
      {/* Hero Header */}
      <div className="bg-gradient-to-r from-primary via-accent to-primary/80 text-white py-12">
        <div className="container mx-auto px-4 max-w-7xl">
          <div className="flex flex-col md:flex-row items-center justify-between gap-6">
            <div>
              <h1 className="text-5xl font-bold mb-3">
                Sales Analytics Platform
              </h1>
              <p className="text-lg text-white/90">
                Real-time insights • Multi-year comparison • Advanced filtering
              </p>
            </div>
            <div className="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
              <p className="text-sm text-white/80 mb-1">Total Revenue 2024</p>
              <p className="text-4xl font-bold">${(metrics.totalSales / 1000).toFixed(0)}k</p>
            </div>
          </div>
        </div>
      </div>

      <div className="container mx-auto px-4 py-8 max-w-7xl space-y-8">
        {/* Key Metrics */}
        <MetricsGrid data={metrics} />

        {/* Main Sales Chart */}
        <SalesChart />

        {/* Secondary Insights Grid */}
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <ComparisonChart data={salesData} />
          <TopPerformers data={salesData} />
        </div>

        {/* Footer Info */}
        <div className="bg-muted/30 rounded-xl p-6 border border-border">
          <div className="flex flex-col md:flex-row items-center justify-between gap-4 text-center md:text-left">
            <div>
              <h3 className="font-semibold text-foreground mb-1">
                Need more insights?
              </h3>
              <p className="text-sm text-muted-foreground">
                Use the filter controls to analyze specific data ranges and thresholds
              </p>
            </div>
            <div className="flex gap-6">
              <div>
                <p className="text-2xl font-bold text-primary">{salesData.length}</p>
                <p className="text-xs text-muted-foreground">Data Points</p>
              </div>
              <div>
                <p className="text-2xl font-bold text-accent">4</p>
                <p className="text-xs text-muted-foreground">Chart Types</p>
              </div>
              <div>
                <p className="text-2xl font-bold text-foreground">3</p>
                <p className="text-xs text-muted-foreground">Years Tracked</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default Index;
